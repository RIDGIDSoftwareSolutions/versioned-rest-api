                    },
                    error: function (err) {
                        alert("Error " + err.status + ":\r\n" + err.statusText);
                    },
                    dataType: "json"
                });
            })
            $("#button3").click(function () {
                $.ajax({
                    type: "GET",
                    url: "api/v7/Examples/",
                    success: function (returnedString) {
                        $("#returnedValue3").html(returnedString);
                    },
                    error: function (err) {
                        alert("Error " + err.status + ":\r\n" + err.statusText);
                    },
                    dataType: "json"
                });
            })
            //$("#button2").click({ url : "api/v2/Examples/", textPlaceholderSelector : "#returnedValue2" }, clickFunction);
        });

